{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Ajouter un utilisateur</h1>

    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        {{ form_start(form) }}
            <div class="mb-4">{{ form_row(form.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight'}}) }}</div>
            <div class="mb-4">{{ form_row(form.password, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight'}}) }}</div>
            <div class="mb-4">{{ form_row(form.lastname, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight'}}) }}</div>
            <div class="mb-4">{{ form_row(form.firstname, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight'}}) }}</div>
            <div class="mb-4">{{ form_row(form.roles, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight'}}) }}</div>

            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Ajouter</button>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('user_index') }}" class="mt-4 inline-block text-blue-500 hover:underline">Retour Ã  la liste des utilisateurs</a>
{% endblock %}
