{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
        <h1 class="text-2xl font-bold mb-4">Client index</h1>

        <div class="overflow-x-auto">
            <table class="w-full border-collapse border border-gray-200 shadow-md">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="border border-gray-300 px-4 py-2">Id</th>
                        <th class="border border-gray-300 px-4 py-2">Firstname</th>
                        <th class="border border-gray-300 px-4 py-2">Lastname</th>
                        <th class="border border-gray-300 px-4 py-2">Email</th>
                        <th class="border border-gray-300 px-4 py-2">Phone Number</th>
                        <th class="border border-gray-300 px-4 py-2">Address</th>
                        <th class="border border-gray-300 px-4 py-2">Created At</th>
                        <th class="border border-gray-300 px-4 py-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr class="hover:bg-gray-50">
                        <td class="border border-gray-300 px-4 py-2">{{ client.id }}</td>
                        <td class="border border-gray-300 px-4 py-2">{{ client.firstname }}</td>
                        <td class="border border-gray-300 px-4 py-2">{{ client.lastname }}</td>
                        <td class="border border-gray-300 px-4 py-2">{{ client.email }}</td>
                        <td class="border border-gray-300 px-4 py-2">{{ client.phoneNumber }}</td>
                        <td class="border border-gray-300 px-4 py-2">{{ client.address }}</td>
                        <td class="border border-gray-300 px-4 py-2">{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="border border-gray-300 px-4 py-2">
                            <a href="{{ path('app_client_show', {'id': client.id}) }}" class="text-blue-500 hover:underline">Show</a> |
                            <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="text-green-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center py-4">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_client_new') }}" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Create new</a>
        </div>
    </div>
{% endblock %}
